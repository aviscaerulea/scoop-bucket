{
    "version": "1.3.46.0-20260215.3",
    "description": "Fast and highly configurable image viewer/editor with a minimal GUI",
    "homepage": "https://github.com/aviscaerulea/jpegview-nt",
    "license": "GPL-2.0-only",
    "architecture": {
        "64bit": {
            "url": "https://github.com/aviscaerulea/jpegview-nt/releases/download/v1.3.46.0-20260215.3/JPEGView-nt-1.3.46.0-20260215.3_x64.zip",
            "hash": "47c69202c3a3cfb1a401b5c3764c9e1350edb0b3af9d5deae7469ff3337f3372"
        }
    },
    "bin": "JPEGView.exe",
    "shortcuts": [
        [
            "JPEGView.exe",
            "JPEGView"
        ]
    ],
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\JPEGView.ini\")) {",
        "    Copy-Item \"$dir\\JPEGView.ini.tpl\" \"$dir\\JPEGView.ini\" -Force",
        "    (Get-Content \"$dir\\JPEGView.ini\") -replace 'StoreToEXEPath=false','StoreToEXEPath=true' | Set-Content \"$dir\\JPEGView.ini\"",
        "}",
        "if (!(Test-Path \"$persist_dir\\KeyMap.txt\")) {",
        "    Copy-Item \"$dir\\KeyMap.txt.default\" \"$dir\\KeyMap.txt\" -Force",
        "}",
        "if (Test-Path \"$persist_dir\\ParamDB.db\") { Copy-Item \"$persist_dir\\ParamDB.db\" \"$dir\" | Out-Null }"
    ],
    "persist": [
        "JPEGView.ini",
        "KeyMap.txt"
    ],
    "uninstaller": {
        "script": "if (Test-Path \"$dir\\ParamDB.db\") { Copy-Item \"$dir\\ParamDB.db\" \"$persist_dir\" | Out-Null }"
    },
    "checkver": {
        "github": "https://github.com/aviscaerulea/jpegview-nt",
        "regex": "tag/v([\\d.]+-\\d+\\.\\d+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/aviscaerulea/jpegview-nt/releases/download/v$version/JPEGView-nt-$version_x64.zip"
            }
        }
    }
}
